{
  "include": ["tests/*"],
  "exclude": [
    "../node-modules", "tests/example/*"
  ],
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "lib": ["es2019"],
    /* Modules */
    "module": "commonjs",
    "rootDir": "tests/",
    "moduleResolution": "node",
    /* JavaScript Support */
    "allowJs": false,
    /* Emit */
    "declaration": false,
    "declarationMap": false,
    "outDir": "tests",
    "removeComments": true,
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "allowUnusedLabels": true,
    "allowUnreachableCode": true
  }
}